{
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": ".",
    "target": "es2019",
    "module": "commonjs",
    "declaration": true,
    "typeRoots": [
      "src/@types",
      "./node_modules/@types"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
